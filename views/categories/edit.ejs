<html>
  <head>
        <title>Edit Category</title>
        <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <%- include("../partials/header.ejs") %>
        <h4>Edit Category</h4>

        <form action="/categories/update" method="POST">
            <input type="hidden" name="categoryId" id="categoryId" value="<%= category.id %>" />
            <div class="formDiv">
                <label for="categoryName">Category Name</label>
                <input type="text" name="categoryName" id="categoryName" value="<%= category.name %>" required />
            </div>
            <div class="formDiv">
                <label for="description">Description</label>
                <input type="text" name="description" id="description" value="<%= category.description %>"/>
            </div>
            <div>
                <button type="submit">Update</button>
                <a href="/"  class="button">Back to Home</a>
            </div>
        </form>
  </body>
</html>
