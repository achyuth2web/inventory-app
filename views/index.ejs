<html>
    <head>
        <title>Home - Inventory App</title>
        <link rel="stylesheet" href="/styles.css">
        <script src="https://kit.fontawesome.com/1c32b7c63c.js" crossorigin="anonymous"></script>
    </head>
    <body>
        <%- include("partials/header.ejs") %>
        <div class="titleDiv">
            <h4><%= title %></h4>
            <a href="categories/new" class="button">Create New Category</button></a>
        </div>
        <% if (locals.categories.length > 0) {%>
            <div class="tileParentDiv">
            <% categories.forEach((category) => { %>
                <%- include('partials/tile.ejs', {category: category}); %>
            <% }); %>
            </div>
        <% } else { %>
            <h5>No Categories Available. Please create.</h5>
        <% } %>
    </body>
</html>