<html>
    <head>
        <title>Products List</title>
        <link rel="stylesheet" href="/styles.css">
        <script src="https://kit.fontawesome.com/1c32b7c63c.js" crossorigin="anonymous"></script>
    </head>
    <body>
        <%- include("../partials/header.ejs") %>
        <div class="titleDiv">
            <h4><%= title %></h4>
            <div class="button-container">
                <a href="/products/<%= categoryId %>/new" class="button">Create New Product</a>
                <a href="/"  class="button">Go back to Home</a>
            </div>
        </div>
        <% if (locals.products.length > 0) {%>
            <div class="tileParentDiv">
            <% products.forEach((product) => { %>
                <%- include('../partials/product_tile.ejs', {product: product}); %>
            <% }); %>
            </div>
        <% } else { %>
            <h4>No Products Available. Please create products.</h4>
        <% } %>
        
    </body>
</html>